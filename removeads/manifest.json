{
    "manifest_version": 2,
    "name": "YT Adblocker Popup Blocker",
    "version": "1.0",
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "48": "king.png"
    }
  }
  